{
  "name": "mife.github.io",
  "version": "1.0.0",
  "description": "mife.github.io",
  "main": "index.js",
  "scripts": {
    "deploy": "gh-pages -d jekyll/_site",
    "standard": "lint-staged",
    "stylelint": "stylelint --fix --config './.stylelintrc.js' './src/**/*.scss' './src/**/*.css'",
    "precommit": "concurrently \"npm run stylelint\" \"npm run standard\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MIFE/mife.github.io.git"
  },
  "keywords": [
    "mife",
    "frontend"
  ],
  "author": "Cary Chen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MIFE/mife.github.io/issues"
  },
  "standard": {
    "ignore": [
      "node_modules/"
    ],
    "parser": "babel-eslint"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "standard --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "homepage": "https://github.com/MIFE/mife.github.io#readme",
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "standard": "^12.0.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.4"
  }
}
